{
	"name": "Codespace Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers-extra/features/npm-packages:1": {
			"packages": ["cspell", "markdownlint-cli2"]
		},	
		"ghcr.io/devcontainers/features/ruby:1": {
			"version": "3.2"
		},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "imagemagick,libmagickwand-dev"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"DavidAnson.vscode-markdownlint",
				"streetsidesoftware.code-spell-checker",
				"esbenp.prettier-vscode"
			]	
		}
	},

    "postCreateCommand": "./.devcontainer/universal/postCreateCommand.sh",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

}