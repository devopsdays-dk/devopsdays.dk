{
    "version": "0.2",
    "language": "en",
    "ignorePaths": [
        "**/node_modules/**",
        "**/.git/**",
        "**/.github/**",
        "**/.vscode/**",
        "**/.cspell/**",
        "**/logs/**",
        "**/tmp/**",
        "**/temp/**",
        "**/_config.yml"
    ],
    "files": [
        "**/*.md",
        "**/*.txt",
        "_data/**/*.json",
        "**/*.yml",
        "**/*.yaml",
        "**/LICENSE"
    ],
    "dictionaryDefinitions": [
        {
            "name": "repo dictionary",
            "path": "./.cspell/dictionary.txt"
        }
    ],
    "dictionaries": [
        "repo dictionary"
    ],
    "ignoreRegExpList": [
        "{%[\\s\\S]*?%}", // ignore liquid tags
        "{{[\\s\\S]*?}}", // ignore liquid variables
        "```[\\s\\S]*?```", // ignore code blocks
        "`[^`]*`", // ignore inline code
        "\\$\\([^)]*\\)", // ignore shell command substitutions
        "^\\s*[\\w-]+:\\s*.+$", // ignore YAML key-value pairs (only at line start)
    ]
}
